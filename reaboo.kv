<MyScreenManager>:
    MainWindow:
    DictionaryWindow:
    StudyWindow:


<DictionaryWindow>:
    name: 'dictionary_window'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: topbar
            md_bg_color: (0, 166/255, 1, 1)
            elevation: 0
            title: 'ReaBoo'
            left_action_items: 
                [["playlist-plus", 
                lambda x: root.add_new_card()]]
            right_action_items: 
                [["exit-to-app", 
                lambda x: app.exit_to_main_screen()]]
        MDScrollView:
            
            MDList:
                padding: 0
                id: container


<StudyWindow>:
    name: 'study_window'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: topbar
            md_bg_color: (0, 166/255, 1, 1)
            elevation: 0
            title: 'ReaBoo'
            right_action_items: 
                [["exit-to-app", 
                lambda x: app.exit_to_main_screen()]]
        MDFloatLayout:
            md_bg_color: (0, 166/255, 1, 0.25)
            MDLabel:
                text: "Studing is everything!"
                pos_hint: {'center_x': 0.5, 'center_y': 1300/1960}
    

<MainWindow>:
    name: 'main_window'
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            md_bg_color: (0, 166/255, 1, 1)
            elevation: 0
            title: 'ReaBoo'
            left_action_items: 
                [["bookshelf", 
                lambda x: x]]
        MDFloatLayout:
            md_bg_color: (0, 166/255, 1, 0.25)
            MDRectangleFlatButton:
                id: learn_button
                markup: True
                text: "[size=48][b]" + app._("Learn") + "[/b][/size]"
                pos_hint: {'center_x': 0.5, 'center_y': 1300/1960}
                _min_width: 410
                _min_height: 150
                text_color: (0, 0, 0, 1)
                md_bg_color: (1,1,1,1)
                line_color: (0,0,0,0)
                on_release: 
                    app.root.current = 'study_window'
                    app.root.transition.direction = 'left'
            MDRectangleFlatButton:
                markup: True
                text: "[size=48][b]" + app._("Edit") + "[/b][/size]"
                pos_hint: {'center_x': 0.5,  'center_y': 900/1960}
                _min_width: learn_button._min_width
                _min_height: learn_button._min_height
                text_color: learn_button.text_color
                md_bg_color: learn_button.md_bg_color
                line_color: learn_button.line_color
                on_release: 
                    app.root.current = 'dictionary_window'
                    app.root.transition.direction = 'left'


<LineDictionary>:
    size_hint_y: None
    height: content.height
    type_swipe: "hand"
    MDCardSwipeLayerBox:
        md_bg_color: '#CE8081'
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: app.remove_item(root)
    MDCardSwipeFrontBox:
        radius: 0
        TwoLineAvatarListItem:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            _no_ripple_effect: True


<NewCard>:
    id: new_card
    shadow_color: (0, 0, 0, 0.75)
    shadow_softness: 5
    elevation: 4
    padding: "64dp"
    size_hint: 0.8, 0.8
    pos_hint: {'center_x': 0.5,  'center_y': 0.5}
    md_bg_color: (240/255, 240/255, 240/255, 1)
    MDRelativeLayout:
        MDIconButton:
            icon: "close"
            pos_hint: {"top": 1, "right": 1}
            on_release:
                app.root.children[0].close_card(new_card)
        MDRoundFlatButton:
            text: "[size=48]" + app._("Save") + "[/size]"
            text_color: "white"
            line_color: "47525E"
            pos_hint: {"bottom": 0.5, "center_x": 0.5}
            _min_width: 250
            _min_height: 100
            md_bg_color: '#47525E'
            disabled:  word.error or translation.error
            on_release:
                root.save_to_db(app.db, word.text, translation.text)
                app.root.children[0].add_to_list_word_trans(word.text, translation.text)
                app.root.children[0].close_card(new_card)
        MDTextField:
            id: word
            hint_text: app._("New word")
            helper_text: app._("Type a new word")
            required: True
            on_text: root.check_word()
            helper_text_mode: "on_focus"
            pos_hint: {'center_x': 0.5,  'center_y': 0.65}
        MDTextField:
            id: translation
            hint_text: app._("Translation")
            helper_text: app._("Type a translation for given word")
            helper_text_mode: "on_focus"
            required: True
            on_text: root.check_translations()
            pos_hint: {'center_x': 0.5,  'center_y': 0.45}